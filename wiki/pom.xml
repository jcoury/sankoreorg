            <exclude>**/**.es</exclude>
            <exclude>**/**.fr</exclude>
            <exclude>**/**.hi</exclude>
            <exclude>**/**.id</exclude>
            <exclude>**/**.si</exclude>
            <exclude>**/**.ru</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

