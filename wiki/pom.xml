            <include>XWiki/**PhotoAlbum**</include>
            <include>XWiki/Policy Statements</include>
            <include>XWiki/Preface</include>
            <include>XWiki/**Presentation**</include>
            <include>XWiki/ProjectGroup</include>
            <include>XWiki/**Register**</include>
            <include>XWiki/RightsGroovy</include>
            <include>XWiki/sitemap</include>
            <include>XWiki/SlideClass</include>
            <include>XWiki/Space**</include>
            <include>XWiki/Stories</include>
            <include>Util/**</include>
            <include>STAF/**</include>
            <include>Search/**</include>
            <include>Registration/**</include>
            <include>Photos/**</include>
            <include>News/**</include>
            <include>MimeType/**</include>
            <include>Members/**</include>
            <include>Licences/**</include>
            <include>Home/**</include>
            <include>GWT/**</include>
            <include>Groups_TemplateSpace/**</include>
            <include>Groups/**</include>
            <include>FileCheck/**</include>
            <include>FeaturedContent/**</include>
            <include>CurrikiCode/**</include>
            <include>CRS/**</include>
            <include>CreateResources/**</include>
            <include>Coll_Templates/**</include>
            <include>Board/**</include>            
            <include>AssetManager/**</include>
            <include>Affiliate/**</include>
            <include>AdWordsJump/**</include>
            <include>Admin/**</include>
            <include>Main/**</include>            
          </includes>
          <excludes>
            <exclude>**/META-INF/**</exclude>
            <exclude>Search/Resources</exclude>
            <exclude>Search/WebHome</exclude>
            <exclude>Search/Members</exclude>
            <exclude>Search/Translations</exclude>
            <exclude>Registration/RegisterGroovy</exclude>
            <exclude>Registration/Translations</exclude>
            <exclude>Main/About</exclude>
            <exclude>Main/AboutConnecting</exclude>
            <exclude>Main/AboutContributing</exclude>
            <exclude>Main/AboutFindingCollecting</exclude>
