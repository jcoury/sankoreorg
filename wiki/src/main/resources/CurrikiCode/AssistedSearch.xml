<property>
<code>document.observe('dom:loaded', function(){
  var f = $("search-criteria-form");
  var radios = f.getInputs('radio');
  radios.invoke("observe", "click", function(e){
    var radio = e.element();
    if (radio.name == 'educational_level') {
      var url = "/xwiki/bin/view/CurrikiCode/AssistedSearchDisciplines?xpage=plain&amp;educational_level="+$F(radio);
      new Ajax.Request(url, {      
        onSuccess: function(transport){
          $("disciplines").update(transport.responseText);
          //var innerhtml = response;
        }
      });
    }
  });
});</code>
